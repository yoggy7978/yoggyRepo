package local.yogsms;

import android.content.Context;
import android.widget.LinearLayout;
import android.widget.TextView;

public class SMSView extends LinearLayout {

    private TextView text1;
    private TextView text2;
	public SMSView(Context context, String txt1, String txt2) {
		super(context);
		// TODO Auto-generated constructor stub
        this.setOrientation(VERTICAL);

        // Here we build the child views in code. They could also have
        // been specified in an XML file.

        text1 = new TextView(context);
        text1.setText(txt1);
        addView(text1, new LinearLayout.LayoutParams(
                LayoutParams.FILL_PARENT, LayoutParams.WRAP_CONTENT));

        text2 = new TextView(context);
        text2.setText(txt2);
        addView(text2, new LinearLayout.LayoutParams(
                LayoutParams.FILL_PARENT, LayoutParams.WRAP_CONTENT));		
	}
	
    public void setText1(String txt1) {
    	text1.setText(txt1);
    }


    public void setText2(String txt2) {
    	text2.setText(txt2);
    }
	

}

